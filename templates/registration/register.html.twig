{% extends 'base.html.twig' %} {% block title %}Register{% endblock %} {% block body %}
<div class="container">
    {% for flashError in app.flashes('verify_email_error') %}

    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="h3 mb-3 font-weight-normal ">S'inscrire</h1>



    {{ form_start(registrationForm) }} {{ form_row(registrationForm.email) }} {{ form_row(registrationForm.plainPassword, { label: 'Password ' }) }} {{ form_row(registrationForm.agreeTerms) }}

    <button type="submit" class="btn shadow-3 rounded-1 small blue bd-1 bd-solid bd-black  uppercase mt-3 mr-4">Register</button> {{ form_end(registrationForm) }}
</div>
{% endblock %}